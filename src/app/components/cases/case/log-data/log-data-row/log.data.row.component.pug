.row.full-width
  .large-1.columns([innerText]="logItem.where")
  .large-1.columns([innerText]="logItem.when | localeDate")
  .large-2.columns([innerText]="logItem.what")
  .large-2.columns([innerText]="logItem.why")
  .large-2.columns([innerText]="logItem.how")
  .large-1.columns([innerText]="logItem.with")
  .large-2.columns
    span([innerHTML]="(logItem.result ? logItem.result : 'empty') | newline", [style.opacity]="logItem.result ? 1 : 0")
  .large-1.columns
    a((click)="editLog()")
      span.icon.icon-pencil
    a((click)="deleteLog()")
      span.icon.icon-trash

  hr.full-width