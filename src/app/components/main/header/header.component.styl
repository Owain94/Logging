header
  background-color #790000
  color white
  overflow hidden
  img
    width 450px
    margin-bottom -40px
    display inline-block
  h1
    color white
    font-size 70px
    line-height 74px
    font-weight normal
    text-shadow 0 1px 1px rgba(0, 0, 0, .2)
    margin-top 20px
    :first-letter
      text-transform capitalize
  span
    :first-letter
      text-transform capitalize
  .subheading
    display block
    margin-bottom 30px
    font-size 28px
    text-shadow 0 1px 1px rgba(0, 0, 0, .2)

@media (min-width: 768px) and (max-width: 1023px)
  header
    h1
      font-size 60px
    .subheading
      font-size 26px

@media (max-width: 767px)
  header
    text-align center !important
    margin-top 0 !important
    h1
      margin-top 10px !important
